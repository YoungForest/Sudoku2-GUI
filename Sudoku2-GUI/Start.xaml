<Page x:Class="Sudoku2_GUI.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku2_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Start">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock>难度：</TextBlock>
            <ComboBox SelectionChanged="ComboBox_SelectionChanged" Width="80">
              <ComboBoxItem Name="EasyComboBoxItem" Width="78">Easy</ComboBoxItem>
              <ComboBoxItem Name="MediumComboBoxItem" Width="78">Medium</ComboBoxItem>
              <ComboBoxItem Name="HardComboBoxItem" Width="78">Hard</ComboBoxItem>
            </ComboBox>
          </StackPanel>
            <Button Name="BeginGameButton" Margin="0,0,0,15" Click="BeginGameButton_Click" Width="100" >Start Game</Button>
            <Button Name="BestRecordButton" Click="BestRecordButton_Click" Width="100">Best Record</Button>
        </StackPanel>
    </Grid>
</Page>
