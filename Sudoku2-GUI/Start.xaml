<Page x:Class="Sudoku2_GUI.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku2_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Start">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="BeginGameButton" Margin="0,0,0,15" Click="BeginGameButton_Click">Start Game</Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock>难度：</TextBlock>
                <ComboBox SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Name="EasyComboBoxItem">Easy</ComboBoxItem>
                    <ComboBoxItem Name="MediumComboBoxItem">Medium</ComboBoxItem>
                    <ComboBoxItem Name="HardComboBoxItem">Hard</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <Button Name="BestRecordButton" Click="BestRecordButton_Click">Best Record</Button>
        </StackPanel>
    </Grid>
</Page>
